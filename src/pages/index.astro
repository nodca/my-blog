---
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
const recentPosts = posts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 5);
---

<BaseLayout title="首页">
  <MainCard
    title="欢迎来到我的博客"
    description="记录生活与技术的个人空间"
    textOverlay="BLOG"
    infoIcon="lucide:info"
  >
    <div class="space-y-8">
      <!-- Hero Section -->
      <section class="py-6">
        <div class="flex flex-col items-center text-center">
          <h1
            class="text-4xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent leading-loose"
          >
            你好，欢迎光临！
          </h1>
          <p class="text-xl text-base-content/80 max-w-3xl mb-8">
            这里是我的个人博客，记录技术学习、生活感悟和各种折腾的过程。
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <a href="/blog" class="btn btn-primary gap-2 btn-shine-effect">
              <Icon name="lucide:book-open" class="w-5 h-5" />
              <span>浏览文章</span>
            </a>
            <a href="/about" class="btn btn-outline gap-2">
              <Icon name="lucide:user" class="w-5 h-5" />
              <span>关于我</span>
            </a>
          </div>
        </div>
      </section>

      <!-- Recent Posts -->
      <section class="py-6">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:clock" class="w-6 h-6 text-primary" />
          <span>最新文章</span>
        </h2>

        <div class="space-y-4">
          {recentPosts.map((post) => (
            <a href={`/blog/${post.slug}`} class="card bg-base-200 hover:bg-base-300 transition-colors p-4 block">
              <div class="flex justify-between items-start gap-4">
                <div>
                  <h3 class="font-bold text-lg mb-1">{post.data.title}</h3>
                  <p class="text-base-content/70 text-sm line-clamp-2">{post.data.description}</p>
                </div>
                <span class="text-sm text-base-content/50 whitespace-nowrap">{post.data.pubDate}</span>
              </div>
            </a>
          ))}
        </div>

        <div class="mt-6 text-center">
          <a href="/blog" class="btn btn-ghost gap-2">
            <span>查看全部文章</span>
            <Icon name="lucide:arrow-right" class="w-4 h-4" />
          </a>
        </div>
      </section>
    </div>
  </MainCard>
</BaseLayout>
